generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Vendor {
  id          String            @id @default(cuid())
  name        String            @unique
  logo        String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  scraperFile String?
  website     String?
  Products    Product[]
  Locations   VendorLocations[]
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VendorLocations {
  id        String   @id @default(cuid())
  name      String
  address   String
  city      String
  country   String
  phone     String
  email     String
  latitude  Float
  longitude Float
  vendorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  vendor    Vendor   @relation(fields: [vendorId], references: [id])
}

model Brand {
  id            String         @id @default(cuid())
  name          String         @unique
  embedding     Bytes?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  products      Product[]
  productGroups ProductGroup[]
}

model Unit {
  id            String         @id @default(cuid())
  name          String         @unique
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  products      Product[]
  productGroups ProductGroup[]
}

model ProductName {
  id            String         @id @default(cuid())
  name          String         @unique
  embedding     Bytes?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  products      Product[]
  productGroups ProductGroup[]
}

model ProductGroup {
  id             String       @id @default(cuid())
  normalizedName String
  brandId        String?
  productNameId  String?
  dosageValue    Decimal?
  dosageUnit     String?
  unitId         String?
  groupKey       String       @unique
  productCount   Int          @default(0)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  products       Product[]
  brand          Brand?       @relation(fields: [brandId], references: [id])
  productName    ProductName? @relation(fields: [productNameId], references: [id])
  unit           Unit?        @relation(fields: [unitId], references: [id])

  @@index([groupKey])
}

model Product {
  id                    String                   @id @default(cuid())
  vendorId              String
  price                 Float
  createdAt             DateTime                 @default(now())
  updatedAt             DateTime                 @updatedAt
  title                 String
  category              String?
  link                  String
  thumbnail             String
  photos                String
  brandConfidence       Float?
  brandId               String?
  description           String?
  dosageUnit            String?
  dosageValue           Decimal?
  normalizedName        String?
  originalTitle         String?
  processedAt           DateTime?
  productGroupId        String?
  productNameConfidence Float?
  productNameId         String?
  quantity              Int?
  quantityConfidence    Float?
  searchTokens          String[]
  searchVector          Unsupported("tsvector")?
  titleEmbedding        Bytes?
  unitConfidence        Float?
  unitId                String?
  brand                 Brand?                   @relation(fields: [brandId], references: [id])
  productGroup          ProductGroup?            @relation(fields: [productGroupId], references: [id])
  productName           ProductName?             @relation(fields: [productNameId], references: [id])
  unit                  Unit?                    @relation(fields: [unitId], references: [id])
  vendor                Vendor                   @relation(fields: [vendorId], references: [id])

  @@unique([title, vendorId], name: "title_vendorId")
  @@index([searchVector], type: Gin)
  @@index([productGroupId])
  @@index([normalizedName])
  @@index([searchTokens], type: Gin)
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
