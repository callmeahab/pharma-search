generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Vendor {
  id          String            @id @default(cuid())
  name        String            @unique
  logo        String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  scraperFile String?
  website     String?
  Products    Product[]
  Locations   VendorLocations[]
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VendorLocations {
  id        String   @id @default(cuid())
  name      String
  address   String
  city      String
  country   String
  phone     String
  email     String
  latitude  Float
  longitude Float
  vendorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  vendor    Vendor   @relation(fields: [vendorId], references: [id])
}

model Brand {
  id        String    @id @default(cuid())
  name      String    @unique
  embedding Bytes?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  products  Product[]
}

model Unit {
  id        String    @id @default(cuid())
  name      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  products  Product[]
}

model ProductName {
  id        String    @id @default(cuid())
  name      String    @unique
  embedding Bytes?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  products  Product[]
}


model Product {
  id                    String                   @id @default(cuid())
  vendorId              String
  price                 Float
  createdAt             DateTime                 @default(now())
  updatedAt             DateTime                 @updatedAt
  title                 String
  category              String?
  link                  String
  thumbnail             String
  photos                String
  brandConfidence       Float?
  brandId               String?
  description           String?
  dosageUnit            String?
  dosageValue           Decimal?
  normalizedName        String?
  originalTitle         String?
  processedAt           DateTime?
  productNameConfidence Float?
  productNameId         String?
  quantity              Int?
  quantityConfidence    Float?
  searchTokens          String?  // JSON string for SQLite compatibility
  titleEmbedding        Bytes?
  unitConfidence        Float?
  unitId                String?
  brand                 Brand?                   @relation(fields: [brandId], references: [id])
  productName           ProductName?             @relation(fields: [productNameId], references: [id])
  unit                  Unit?                    @relation(fields: [unitId], references: [id])
  vendor                Vendor                   @relation(fields: [vendorId], references: [id])

  @@unique([title, vendorId], name: "title_vendorId")
  @@index([normalizedName])
  @@index([brandId])
  @@index([vendorId])
  @@index([price])
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
